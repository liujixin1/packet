/* pages/index/index.wxss */
page{
  background: #f8f8f8;
}
/* banner轮播图  */
.swiper_container{
  position: absolute;
  z-index: 100;
  width: 250rpx;
  background: rgba(0,0,0,.6);
  height: 60rpx;
  top: 20rpx;
  left: 20rpx;
  border-radius: 30rpx;
  overflow: hidden
}
.swiper-item{
  display: flex;
}
swiper-item .swiperImg{
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}
swiper-item .swiperText{
  font-size: 22rpx;
  line-height: 60rpx;
  color: #fff;
  margin-left: 10rpx;
  font-weight: bold;
}
.swiper-banner {
  height: 500rpx;
  width: 100%;
}
.swiper-banner swiper-item .videoPop{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 10;
}
.swiper-banner swiper-item .videoPop .icon-pause{
  font-size: 120rpx;
  color: #fff;
  margin-left: 315rpx;
  line-height: 420rpx;
  opacity: 0.7;
}
.swiper-banner swiper-item image {
  height: 100%;
  width: 100%;
}
.bannerText{
  position: absolute;
  bottom: 30rpx;
  left: 0;
  height: 80rpx;
  z-index: 100;
  font-size: 32rpx;
  color: #fff;
  width: 80%;
  padding: 0 10%;
  font-weight: bold;
}
.list{
  width: 720rpx;
  margin: 0 auto;
  justify-content: space-between;
  display: flex;
  flex-wrap: wrap;
}
.list .item{
  position: relative;
  width: 352.5rpx;
  height: 500rpx;
  margin-block-start: 15rpx;
  overflow: hidden;
  border-radius: 10rpx;
    
}
.list .item .itemImg{
  width:100%;
  height: 100%;
  display: block;
  border-radius: 10rpx;
  overflow: hidden;
  background: #fff;
}
.list .item  .itemLeFooter{
  display: flex;
  position: absolute;
  bottom: 10rpx;
  left: 71.25rpx;
  background: rgba(0,0,0,.2);
  border-radius:25rpx;
  padding: 0 20rpx;
  min-width: 210rpx;
  box-sizing: border-box;
  z-index: 100
}
.list .item .time{
  height: 50rpx;
  font-size: 24rpx;
  color: #fff;
  line-height: 55rpx;
  margin-left: 10rpx;
}
.item .footerImg{
  position: absolute;
  width: 100%;
  height: 200rpx;
  bottom: 0;
  left: 0;
  
  z-index: 10;
}
.icon-fire{
  font-size: 30rpx;
  color:#fff;
  line-height: 50rpx;
}
.isEnd{
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 22rpx;
  color: #999;
}