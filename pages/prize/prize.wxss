.container{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.titleImg{
  width: 400rpx;
  height: 200rpx;
  margin-top: 20rpx;
}
.roulette{
  margin-top: 0rpx;
}
.prizeBg{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -1;
}
.sum{
  font-size: 35rpx;
  font-weight: bold;
  text-align: center;
  line-height: 60rpx;
  color: #fff;
  margin-top: 30rpx;
}
.list{
  width: 600rpx;
  margin: 0 auto;
  margin-top: 40rpx;
  text-align: center;
  background: rgba(0,0,0,.2);
  border-radius: 10rpx;
  padding: 20rpx 20rpx;
}
.list .listTitle{
  font-size: 30rpx;
  line-height: 50rpx;
  font-weight: bold;
  color: #fff;
}
.list .listItem{
  font-size: 28rpx;
  color: #fff;
  line-height: 45rpx;
}
