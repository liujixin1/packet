/* 导航容器 */
.nav-box{
  position: relative;
  background: #fff;
  width: 710rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  border-radius: 6rpx;
  z-index: 1000;
  /* box-shadow: 0rpx 0rpx 5rpx rgba(0,0,0,.1); */
}
.nav-box .nav-item{
  height: 100rpx;
  width: 650rpx;
  margin: 0 auto;
  display:-webkit-flex;
  display:flex;
  -webkit-justify-content:space-between;
  justify-content: space-between;
  border-bottom: 1rpx solid #e6e6e6;
}
.nav-box .nav-item:last-child{
   border-bottom: 0rpx solid #e6e6e6;
}
.nav-box .nav-item .nav-item-left{
  display:-webkit-flex;
  display:flex;
}
.nav-box .nav-item .iconfont{
  font-size: 32rpx;
  color:#999;
  line-height: 100rpx;
  margin-right: 18rpx;
}
.nav-box .nav-item .nav-item-left .name{
  font-size: 26rpx;
  color: #666;
  line-height: 100rpx;
}
.nav-box .nav-item .icon-collect{
  color: #ff6767;
}

.nav-box .nav-item .icon-my{
  color: #ffd700;
}
.nav-box .nav-item .icon-service{
  color: #67c23a;
}
.nav-box .nav-item .icon-feedback{
  color: #f4ea2a;
}
.nav-box .nav-item .icon-rightArrow{
  font-size: 35rpx;
  color:#ccc;
  line-height: 100rpx;
}
.button-hover{
  background: #fff;
}