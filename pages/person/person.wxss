/* pages/person/person.wxss */
page{
  background: #f8f8f8;
}
.userinfo {
  position: relative;
  box-sizing: border-box;
  height: 380rpx;
  background-size: 100% 100%;
  background-position: center;
  overflow: hidden;
  background-image: linear-gradient(to top, #f3e7e9 0%, #e3eeff 99%, #e3eeff 100%);
}
.btn{
   font-size: 35rpx;
  font-weight: bold;
  display: block;
  color: #fff;
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  margin: 0 auto;
  margin-top: 30rpx;
}
.headPortrait{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  display: block;
  margin: 0 auto;
  margin-top: 70rpx;
  overflow: hidden;
  text-align: center;
}
.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 15rpx;
  display: block;
  /* border: 2rpx solid #ff8080; */
  margin: 0 auto;
  margin-top: 70rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.userinfo-nickname {
  font-size: 35rpx;
  font-weight: bold;
  display: block;
  color: #fff;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  margin-top: 30rpx;
}
.vip{
  font-size: 40rpx;
  color: #ffd700;
}
