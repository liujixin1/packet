/* pages/placard2/placard2.wxss */
page{
  height: 100%;
}
.container ,.main{
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.img {
  width: 100%;
  display: block;
}

.bg {
  display: block;
  width: 750rpx;
  height: 100%;
}

.center {
  position: absolute;
  width: 600rpx;
  left: 75rpx;
  top: 320rpx;
  z-index: 100;
  border-radius: 10rpx;
}

.top .userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: block;
  border: 2rpx solid #fff;
  margin: 0 auto;
  overflow: hidden;
  box-sizing: border-box;
}

.top .userinfo-nickname {
  font-size: 30rpx;
  display: block;
  color: #fff;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  margin-top: 10rpx;
}

.list {
  margin-top: 10rpx;
}

.list .item {
  width: 100%;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  line-height: 65rpx;
}

.list .item .itmeText {
  color: #e6a23c;
  font-size: 28rpx;
  font-weight: bold;
  padding: 0 10rpx;
}

.qr {
  display: flex;
  justify-content: center;
  margin-top: 80rpx;
}

.qr .qrText {
  width: 180rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 26rpx;
  color: #fff;
  margin-right: 20rpx;
  margin-top: 30rpx;
}

.qr .qrImg {
  width: 120rpx;
  height: 120rpx;
}

.btn {
  width: 200rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  margin: 0 auto;
  border-radius: 35rpx;
  font-size: 28rpx;
  color: #fff;
  background: rgba(230, 126, 60, 0.9);
  font-weight: bold;
  box-shadow: 2rpx 2rpx 8rpx rgba(0, 0, 0, 0.3);
  position: fixed;
  bottom: 20rpx;
  left: 275rpx;
  z-index: 1000;
  animation: pulse infinite 1.5s;
}
