<!--pages/testPaper3/testPaper3.wxml-->
<view class="container">
  <image class="bg" mode="aspectFill"  src="{{bgImg}}"></image>
  <view class="center">
    <view class="form">
      <view class="item">
        <view class="lable">出生日期</view>
        <view class="inp">
          <picker mode="date" value="{{form.date}}" bindchange="bindDateChange">
            <view class="picker">
              {{form.date}}
            </view>
          </picker>
        </view>
      </view>
      <view class="item">
        <view class="lable">您的性别</view>
        <view class="inp">
          <radio-group class="radio-group" bindchange="radioChange">
            <radio class="radio" wx:for-items="{{gender}}" wx:key="name" value="{{item.name}}" checked="{{item.checked}}">
              <text>{{item.value}}</text>
            </radio>
          </radio-group>
        </view>
      </view>
      <view class="item">
        <view class="lable">您的身高</view>
        <view class="inp">
          <picker mode="selector" value="{{form.height}}" bindchange="bindHeightChange" range="{{height}}">
            <view class="picker">
              {{form.height}}
            </view>
          </picker>
        </view>
      </view>
      <view class="item">
        <view class="lable">您的体重</view>
        <view class="inp">
          <picker mode="selector" value="{{form.weight}}" bindchange="bindWeightChange" range="{{weight}}">
            <view class="picker">
              {{form.weight}}
            </view>
          </picker>
        </view>
      </view>
      <view class="item">
        <view class="lable">饮食爱好</view>
        <view class="inp" bindtap="btnClick">
          {{form.hobby}}
        </view>
      </view>
      <view class="item">
        <view class="lable">吸烟情况</view>
        <view class="inp">
          <radio-group class="radio-group" bindchange="smokeChange">
            <radio class="radio" wx:for-items="{{smoke}}" wx:key="name" value="{{item.name}}" checked="{{item.checked}}">
              <text>{{item.value}}</text>
            </radio>
          </radio-group>
        </view>
      </view>
      <view class="item">
        <view class="lable">喝酒情况</view>
        <view class="inp">
          <radio-group class="radio-group" bindchange="liquorChange">
            <radio class="radio" wx:for-items="{{liquor}}" wx:key="name" value="{{item.name}}" checked="{{item.checked}}">
              <text>{{item.value}}</text>
            </radio>
          </radio-group>
        </view>
      </view>
    </view>
    <button class="btn" open-type='getUserInfo' bindgetuserinfo="getUserInfo">确认信息</button>
  </view>
</view>