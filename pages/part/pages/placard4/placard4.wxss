/* pages/placard2/placard2.wxss */
page{
  height: 100%;
}
.container ,.main{
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.img {
  width: 100%;
  display: block;
}

.bg {
  display: block;
  width: 750rpx;
  height: 100%;
}

.center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 600rpx;
  height: 1000rpx;
  z-index: 1000;
}

.titleDate{
  position: absolute;
  margin: 0 auto;
}

.dateCenterImg{
  width: 600rpx;
  height: 1000rpx;
  display: block;
}
.titleDate .dateImg{
  width: 409rpx;
  height: 137rpx;
  margin:  0 auto;
  display: block;
}
.titleDate{
   position: absolute;
  top: 25rpx;
  font-size: 45rpx;
  text-align: center;
  width: 100%;
  color: #fff;
  z-index: 110;
  font-weight: bold;
}
.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 90rpx;
  display: block;
  border: 4rpx solid #ce131c;
  overflow: hidden;
  box-sizing: border-box;
  position: absolute;
  left: 189rpx;
  top: 500rpx;
}
.btn {
  width: 200rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  margin: 0 auto;
  border-radius: 35rpx;
  font-size: 28rpx;
  color: #fff;
  background: rgba(230, 126, 60, 0.9);
  font-weight: bold;
  box-shadow: 2rpx 2rpx 8rpx rgba(0, 0, 0, 0.3);
  position: fixed;
  bottom: 20rpx;
  left: 275rpx;
  z-index: 1000;
  animation: pulse infinite 1.5s;
}
