/* pages/testPaper4/testPaper4.wxss */
page{
  height: 100%;
}
.container{
  width: 100%;
  height: 100%;
  position: relative;
  background: #000;
}
.bg{
  display: block;
  width: 750rpx;
  height: 100%;
}
.main{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}
.singImg{
  position: absolute;
  width: 500rpx;
  height: 500rpx;
  display: block;
  left: 50%;
  top: 50%;
  animation:heartbeat 1s infinite;

}
@keyframes heartbeat {
	0% {
	transform:translate(-50%,-50%) scale(0.8,0.8);
}
25% {
	transform:translate(-50%,-50%) scale(1,1);
}
100% {
	transform:translate(-50%,-50%) scale(0.8,0.8);
}
}
.btn{
  width: 300rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  position: absolute;
  left: 50%;
  bottom: 50rpx;
  z-index: 10000;
  transform: translateX(-50%);
  border-radius:40rpx;
  font-size: 30rpx;
  color: #fff;
  background: #409EFF;
  font-weight: bold;
  box-shadow: 2rpx 2rpx 8rpx rgba(0,0,0,.3);
}