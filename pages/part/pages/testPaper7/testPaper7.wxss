/* pages/part//pages/testPaper7/testPaper7.wxss */
page {
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
  position: relative;
  background: #000;
}

.bg {
  display: block;
  width: 750rpx;
  height: 100%;
}

.center {
  position: absolute;
  width: 600rpx;
  height: 800rpx;
  left: 75rpx;
  top: 400rpx;
  z-index: 100;
  /* background: rgba(255,255,255,.2); */
  border-radius: 10rpx;

}

.item{
  display: flex;
  width: 600rpx;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.item .lable{
  width: 180rpx;
  height: 100rpx;
  font-size: 30rpx;
  color: #fff;
  background: rgba(230,126,60,.6);
  border-radius: 10rpx;
  text-align: center;
  line-height: 100rpx;
}
.item .inp{
  width: 400rpx;
  height: 100rpx;
  border-radius: 10rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 100rpx;
  color: #fff;
background-image: linear-gradient(120deg, #a1c4fd 0%, #c2e9fb 100%);
  box-shadow: 1rpx 1rpx 4rpx rgba(255,255,255,.2);

}
.item .inp .picker{
  text-align: center;
  font-size: 30rpx;
  line-height: 100rpx;
  color: #fff;
}
.radio-group .radio{
  width: 180rpx;
  color: #fff;
  font-size: 30rpx;
  text-align: left;
  margin-left: 20rpx;
}



.btn {
  width: 400rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  margin: 0 auto;
  margin-top: 150rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #fff;
  background-image: linear-gradient(to top, #e6b980 0%, #eacda3 100%);
  font-weight: bold;
  box-shadow: 2rpx 2rpx 8rpx rgba(0, 0, 0, .3);
}


