/* pages/part//pages/testPaper8/testPaper8.wxss */
page,
.container {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.left {
  width: 100%;
  background-image: linear-gradient(-20deg, #f794a4 0%, #fdd6bd 100%);
  animation: zoomInDown ease 2s;

}

.btn1 {
  position: absolute;
  z-index: 100;
  width: 180rpx;
  height: 180rpx;
  left: 50%;
  top: 20rpx;
  margin-left: -90rpx;
  animation: pulse infinite 2s;
}

.btn2 {
  position: absolute;
  z-index: 100;
  width: 160rpx;
  height: 160rpx;
  left: 50%;
  bottom: 20rpx;
  margin-left: -80rpx;
  animation: pulse infinite 3s;
}

.right {
  position: absolute;
  width: 100%;
  background-image: linear-gradient(120deg, #a1c4fd 0%, #c2e9fb 100%);
  animation: zoomInUp ease 2s;
}

.vs {
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 100;
  width: 300rpx;
  height: 300rpx;
  margin-left: -150rpx;
  margin-top: -150rpx;
  animation: zoomInLeft ease 2s;
  transform: rotate(72deg);
}

.popBg {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 200;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, .5);
}

.timeBg {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 200;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, .5);
}

.pop {
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 300;
  width: 500rpx;
  height: 400rpx;
  margin-left: -250rpx;
  margin-top: -200rpx;
  background: #fff;
  border-radius: 10px;
  overflow: hidden;
  animation: zoomInLeft ease 2s;

}

.pop .trophy {
  width: 200rpx;
  height: 200rpx;
  margin-left: 150rpx;
  margin-top: 10rpx;

}

.pop .popText {
  text-align: center;
  line-height: 50rpx;
  font-size: 35rpx;
  font-weight: bold;
  color: #333;
}

.pop .btn {
  display: flex;
  border-top: 1rpx solid #eee;
  margin-top: 40rpx;
}

.pop .btn view {
  text-align: center;
  flex: 1;
  line-height: 90rpx;
  color: #999;
}

.pop .btn view:last-child {
  border-left: 1rpx solid #eee;
  color: #351c75;

}

.time {
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 300;
  width: 200rpx;
  height: 200rpx;
  margin-left: -100rpx;
  margin-top: -100rpx;
  transform: rotate(90deg);

}