.container{
  width: 700rpx;
  margin: 0 auto;
  padding-bottom: 30rpx;
}
.top{
  margin-top: 10rpx;
}
.top .topTitle{
  height:80rpx;
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
line-height: 80rpx;
color: #222;
}
.top .topList{
  height: 60rpx;
  display: flex;
  justify-content: center;
}
.top .topItem{
  font-size: 28rpx;
  color: #222;
  line-height: 60rpx;
}
.top .topItem:first-child{
  margin-right: 50rpx;
}
.top .attention view{
  font-size: 26rpx;
  line-height: 35rpx;
  color: #222;
}
.main{
  /* margin-top: 20rpx; */
}
.main .one,.main .two,.main .three{
  margin-top: 30rpx;
}

.main .oneItme{
  margin-top: 20rpx;
}
.main .title{
  font-size: 28rpx;
  font-weight: bold;
}
.oneItmeTitle{
  font-size: 28rpx;
  color: #222;
  margin-bottom: 10rpx;
}
.oneItemList{
  display: flex;
  height: 80rpx;
}
.oneItemList .icon-circle{
  font-size: 50rpx;
  line-height: 80rpx;
  color: #e6e6e6;
}
.oneItemList .icon-picth{
  font-size: 50rpx;
  line-height: 80rpx;
  color: #09BB07;
}
.oneItemList .selectText{
  font-size: 28rpx;
  color: #222;
  line-height: 80rpx;
  margin-left: 10rpx;
}
.twoList .twoItem{
  display: flex;
  height: 60rpx;
  flex-wrap: nowrap;
  width: 100%;
  overflow: hidden;
  margin-top: 10rpx;
}
.twoList .twoItem .twoItemTitle{
  font-size: 28rpx;
  line-height: 60rpx;
  flex: 1;
}
.twoList .twoItem input{
  height: 60rpx;
  border: 1rpx solid #e6e6e6;
  border-radius: 8rpx;
  overflow: hidden;
  font-size: 26rpx;
  padding-left: 10rpx;
  box-sizing: border-box;
  width: 300rpx;
}
