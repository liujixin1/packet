.three .threeItem{
  display: flex;
  height: 60rpx;
  margin-top: 10rpx;
}
.three .threeItem .threeItemText{
  font-size: 28rpx;
  color: #222;
  line-height: 60rpx;
}
.three .threeItem .status{
  display: flex;
  margin-left: auto;
}
.three .threeItem .status .iconfont{
  font-size: 50rpx;
  line-height: 60rpx;
  color: #e6e6e6;
}
.three .threeItem .status .iconfont:last-child{
  margin-left: 20rpx;
}
.three .threeItem .status .iconfont.active{
  color: #09BB07;
}
.three .threeItem .status .iconfont.active1{
  color: #F56C6C;
}
