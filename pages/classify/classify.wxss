.main {
  width: 730rpx;
  margin: 0 auto;
  margin-top: 10rpx;
}

.video .list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.video .list .listItem {
  width: 360rpx;
  height: 500rpx;
  position: relative;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.video .list .listItem .itemImg {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.video .list .listItem .itemText {
  position: absolute;
  left: 0;
  bottom: 0rpx;
  width: 360rpx;
  height: 90rpx;
  background: rgba(0, 0, 0, 0.3);
  z-index: 10;
}

.video .list .listItem .itemText .name {
  color: #fff;
  font-size: 28rpx;
  line-height: 35rpx;
  height: 70rpx;
  font-weight: bold;
  padding: 0 25rpx;
  margin: 10rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.essay .list {
  width: 710rpx;
  margin: 0 auto;
}

.essay .list .item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e5e5e5;
}

.essay .list .item:last-child {
  border: 0;
}

.essay .list .item .itemLeft {
  flex: 1;
  width: 400rpx;
}

.essay .list .item .itemLeft .text {
  font-size: 30rpx;
  color: #222;
  line-height: 45rpx;
  height: 150rpx;
  font-weight: bold;
  width: 400rpx;
   word-wrap:break-word;
}

.essay .list .item .itemLeft .time {
  height: 50rpx;
  font-size: 24rpx;
  color: #999;
  line-height: 60rpx;
}

.essay .list .item .imgCenter {
  position: relative;
  width: 300rpx;
  height: 200rpx;
}

.essay .list .item .itemImg {
  width: 300rpx;
  height: 200rpx;
  display: block;
  border-radius: 5rpx;
  overflow: hidden;
}
.isEnd{
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 22rpx;
  color: #999;
}