/* pages/find/find.wxss */

page {
  width: 100%;
  height: 100%;
}

.container {
  position: relative;
  width: 100%;
  /* background: #f5f5f5; */
}

.title {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #fff;
  width: 100%;
}

.nav {
  position: absolute;
  bottom: 10px;
  display: flex;
  justify-content: center;
  width: 100%;
  height: 30px;
  font-size: 32rpx;
  /* border-bottom: 1rpx solid #c6c6c6; */
}

.nav .navItem {
  padding: 0 20rpx;
  height: 30px;
  width: 75rpx;
  text-align: center;
  position: relative;
  line-height: 30px;
  color: #8e8e8e;
  opacity: 0.9;
}

.nav .navItem.active {
  font-size: 34rpx;
  font-weight: bold;
  color: #222;
  opacity: 1;
}

